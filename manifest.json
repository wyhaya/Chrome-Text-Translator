{
    "name": "Text-Translator",
    "manifest_version": 2,
    "description": "Chrome plugin for translating text by sliding mouse",
    "version": "1.0.0",
    "icons": {
      "16": "ico/16.png",
      "48": "ico/48.png",
      "128": "ico/128.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "ftp://*/*", "file:///*"],
        "js": ["index.js","lib/md5.js"],
        "css": ["translator.css"],
        "run_at" : "document_end",
        "all_frames" : true
    }]
}